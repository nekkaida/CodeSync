# CodeSync Backend Environment Configuration
# Copy this file to .env and fill in the values

NODE_ENV=development

# Database - Update with your actual WSL host IP or use localhost
# For Windows with Docker: Use WSL host IP (check with: ipconfig | grep -A 5 "WSL")
# For Linux/Mac: Use localhost
DATABASE_URL=postgresql://codesync_user:<password>@<wsl_host_ip_or_localhost>:5432/codesync

# Redis
REDIS_URL=redis://:<password>@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=<generate_secure_password>

# Authentication Secrets (Generate with: openssl rand -base64 48)
JWT_SECRET=<generate_48_byte_secret>
CSRF_SECRET=<generate_48_byte_secret>
SESSION_SECRET=<generate_32_byte_secret>

# Server Configuration
PORT=4000
YJS_PORT=4001

# CORS - Add your frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Cookies
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# OpenAI API (Get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-YOUR_KEY_HERE

# S3/MinIO Configuration
S3_ENDPOINT=http://localhost:9000
S3_PORT=9000
S3_USE_SSL=false
S3_REGION=us-east-1
S3_BUCKET=codesync-uploads
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Email Configuration (Optional - for invitations and notifications)
# For Gmail: Enable 2FA and create an App Password (https://myaccount.google.com/apppasswords)
# For other providers: Use your SMTP credentials
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@codesync.com
SMTP_FROM_NAME=CodeSync

# Logging
LOG_LEVEL=info

# Monitoring (Optional)
SENTRY_DSN=

# Frontend URL
FRONTEND_URL=http://localhost:3000
